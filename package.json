{
  "name": "ghost-mtg",
  "version": "1.1.0",
  "description": "Ghost customization for having responsive MtG deck lists in blog posts.",
  "repository": {
    "type": "git",
    "url": "https://github.com/sten626/ghost-mtg.git"
  },
  "keywords": [
    "ghost",
    "blog",
    "mtg",
    "deck",
    "decklist",
    "sass",
    "js"
  ],
  "author": "Steven Indzeoski",
  "scripts": {
    "css": "npm-run-all css-lint css-compile css-prefix",
    "css-compile": "node-sass --output-style expanded --source-map true --precision 6 scss/main.scss dist/css/ghost-mtg.css",
    "css-lint": "sass-lint",
    "css-prefix": "postcss --replace dist/css/*.css"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sten626/ghost-mtg/issues"
  },
  "homepage": "https://github.com/sten626/ghost-mtg#readme",
  "devDependencies": {
    "autoprefixer": "^7.1.1",
    "node-sass": "^4.5.3",
    "npm-run-all": "^4.0.2",
    "postcss-cli": "^4.1.0",
    "sass-lint": "^1.10.2"
  }
}
